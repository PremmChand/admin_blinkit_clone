<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderDetailFragment"
    android:background="@color/backgroundColor">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbOderDetailFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:title="Order Detail"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/baseline_keyboard_arrow_left_24"
        app:navigationIconTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:backgroundTint="#DAD4D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbOderDetailFragment" />

    <!-- CardView for Address -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderStatusAddress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/tvUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Show address"
                android:textSize="13sp"
                android:textColor="@color/blue"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView for ImageViews (Tracking) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cvOrderStatusAddress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle"
                android:padding="6dp"
                android:src="@drawable/baseline_backpack_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view1"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="4dp"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle"
                android:padding="6dp"
                android:src="@drawable/baseline_shopping_bag_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view2"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="4dp"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle"
                android:padding="6dp"
                android:src="@drawable/baseline_local_shipping_24"
                app:tint="#DDDDDD" />

            <View
                android:id="@+id/view3"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginHorizontal="4dp"
                android:background="#6B6464" />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle"
                android:padding="6dp"
                android:src="@drawable/baseline_done_outline_24"
                app:tint="#DDDDDD" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Ordered Items -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cvOrderStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ordered Items"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/my_text_color" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Change Status Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeStatus"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="52.00dp"
        android:layout_marginTop="20dp"
        android:text="Change Status"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/cvOrderDetails"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
